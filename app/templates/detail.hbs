{{#with model}}
<header id="food-name">
	<h1>{{#link-to 'search'}}<span><</span>{{/link-to}}{{dishName}}</h1>
</header>

<div id="food-pic">
	<img {{bind-attr src=imageUrl}}>
</div>

<div id="rating">
	<p><span id='ratesNumber'>100 Rates</span>{{star-rating starRating=rate maxStars=5}}</p>
</div>
</br>
<div id="content">
	<div id="food-list">
		<h2>Food material :</h2></br>
		<table>
		   <tr>
		     <td>{{m.name}}</td>
		     <td>{{m.count}}</td>
		   </tr>
		</table>
	</div>	
	<div id="step-layer">
		<h3>Cooking Step :</h3>
		<ol>
		<li>test</li>
		</ol>
    </div>
 {{/with}}
    <div class="commentsArea">
		<a {{action 'toggleReviews'}} class="reviews">
	      {{#if showReviews}}
	        Clear
	      {{else}}
	        Have a comment?
	      {{/if}}
        </a>
        {{#if showReviews}}
		 <ul class="writeReviews">
		  <li class="rating">
		    <label>Rating</label>
		    <br>
		    {{star-rating starRating=rating maxStars=5}}
		  </li>
		  <li class="name">
		    <label>Name</label>
		    <br>
		    {{input class="formcontrol" type="text" value=name placeholder="Your name"}}
		  </li>
		  <li class="comments">
		    <label>Comment</label>
		    <br>
		    {{textarea class="formcontrol" type="checkbox" value=note placeholder="Your comments"}}
		  </li>
		  </ul>
		<button class="submitComments" type="submit">Submit Comment</button>
		{{/if}}
	</div>
</div>

{{#with model}}
<header id="food-name">
	<h1>{{#link-to 'search'}}<span><</span>{{/link-to}}{{dishName}}</h1>
</header>

<div id="food-pic">
	<img {{bind-attr src=imageUrl}}>
</div>

<div id="rating">
	<p><span id='ratesNumber'>100 Rates</span>{{star-rating starRating=rate maxStars=5}}</p>
</div>
</br>
<div id="content">
	<div id="food-list">
		<h2>Food material :</h2></br>
		<table>
		{{#each ingredients}}
		
		    <div>{{i-name}}</div>
		    <div>{{i-count}}</div>
	
		{{/each}}
		</table>
	</div>	
	<div id="step-layer">
		<h3>Cooking Step :</h3>
		<ol>
		{{#each step}}
		<li>{{step}}</li>
		{{/each}}
		</ol>
    </div>
</div>
{{/with}}
<div class="subContent">
<a class="viewComments">
<img src="/assets/comments.jpeg">4 Comments
</a>
<a {{action 'toggleReviews'}} class="reviews">
	      {{#if showReviews}}
	        Clear
	      {{else}}
	        Have a comment?
	      {{/if}}
</a>
<div class="commentsArea">
        {{#if showReviews}}
		 <ul class="writeReviews">
		  <li class="rating">
		    <label>Rating</label>
		    <br>
		    {{star-rating starRating=0 maxStars=5}}
		  </li>
		  <li class="name">
		    <label>Name</label>
		    <br>
		    {{input class="formcontrol" type="text" value=name placeholder="Your name"}}
		  </li>
		  <li class="comments">
		    <label>Comment</label>
		    <br>
		    {{textarea class="formcontrol" type="checkbox" value=note placeholder="Your comments"}}
		  </li>
		  </ul>
		<button class="submitComments" type="submit">Submit Comment</button>
		{{/if}}
</div>
</div>
